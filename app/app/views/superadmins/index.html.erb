<p id="notice"><%= notice %></p>

<h1>Superadmins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Password</th>
      <th>Geofence</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @superadmins.each do |superadmin| %>
      <tr>
        <td><%= superadmin.name %></td>
        <td><%= superadmin.lastname %></td>
        <td><%= superadmin.email %></td>
        <td><%= superadmin.password %></td>
        <td><%= superadmin.geofence %></td>
        <td><%= link_to 'Show', superadmin %></td>
        <td><%= link_to 'Edit', edit_superadmin_path(superadmin) %></td>
        <td><%= link_to 'Destroy', superadmin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

